@model Microsoft.Store.PartnerCenter.Samples.SDK.Explorer.Models.InvokeRunbookModel

@{
    Layout = null;
}

<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Invoke Runbook</h4>
    </div>
    @using (Ajax.BeginForm("Invoke", "Automation", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccessCallback", UpdateTargetId = "runbooks" }))
    {
        <fieldset>
            <div class="row">
                &nbsp;
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => item.ResourceGroupName)
                </div>
                <div class="col-xs-5">
                    @Html.DisplayFor(item => item.ResourceGroupName)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => item.RunbookName)
                </div>
                <div class="col-xs-5">
                    @Html.DisplayFor(item => item.RunbookName)
                </div>
            </div>
            <div>
                @Html.HiddenFor(item => item.RunbookName)
                @Html.HiddenFor(item => item.ResourceGroupName)
            </div>
            <div class="row">
                <div class="col-xs-offset-1">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" id="approve-btn"
                            class="btn btn-danger">
                        Invoke
                    </button>
                </div>
            </div>
        </fieldset>
    }
</div>

@Scripts.Render("~/bundles/jqueryval")