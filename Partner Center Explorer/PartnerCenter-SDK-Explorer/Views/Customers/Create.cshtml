@model Microsoft.Store.PartnerCenter.Samples.SDK.Explorer.Models.NewCustomerModel

@{
    Layout = null;
}

<div id="target">
    <div class="modal-header">
        <h4 class="modal-title">New Customer</h4>
    </div>
    @using (Ajax.BeginForm("Create", "Customers", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "target" }))
    {
        <fieldset>
            <div class="row">
                &nbsp;
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.Name)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.Name, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.PrimaryDomain)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.PrimaryDomain, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.PrimaryDomain)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.FirstName)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.FirstName, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.FirstName)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.LastName)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.LastName, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.LastName)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.EmailAddress)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.EmailAddress, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.EmailAddress)
                </div>
            </div>

            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.PhoneNumber)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.PhoneNumber, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.PhoneNumber)
                </div>
            </div>

            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.AddressLine1)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.AddressLine1, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.AddressLine1)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.AddressLine2)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.AddressLine2, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.AddressLine2)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.City)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.City, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.City)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.ZipCode)
                </div>
                <div class="col-xs-5">
                    @Html.TextBoxFor(item => Model.ZipCode, new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.ZipCode)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-xs-offset-1">
                    @Html.LabelFor(item => Model.State)
                </div>
                <div class="col-xs-5">
                    @Html.DropDownListFor(item => Model.State, new SelectList(Model.SupportedStates), new { @class = "form-control" })
                </div>
                <div class="col-xs-3">
                    @Html.ValidationMessageFor(item => Model.State)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-offset-1">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" id="approve-btn"
                            class="btn btn-danger">
                        Create
                    </button>
                </div>
            </div>
        </fieldset>
    }
</div>

@Scripts.Render("~/bundles/jqueryval")